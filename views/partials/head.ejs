<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
    href="https://fonts.googleapis.com/css2?family=Sansation:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
    rel="stylesheet">
<style>
    * {
        box-sizing: border-box;
    }

    html,
    body {
        font-family: Sansation, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: #fff;

        height: 100%;
        width: 100%;

        overflow: hidden;
        margin: 0;
    }

    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;

        display: flex;
        justify-content: center;
        align-items: center;
    }

    @media (prefers-color-scheme: light) {
        body {
            background-image: url(/static/menu-background-light.jpg);
        }
    }

    @media (prefers-color-scheme: dark) {
        body {
            background-image: url(/static/menu-background-dark.jpg);
        }
    }

    .header {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 4px;
    }

    .header :nth-child(1) {
        font-size: 36px;
        font-weight: 700;
    }

    .header :nth-child(2) {
        font-size: 18px;
        font-weight: 400;
        text-align: center;
    }

    .button-container {
        display: flex;
        width: 100%;
        flex-direction: column;
        gap: 8px;
    }

    .button {
        display: flex;
        flex-direction: row;
        gap: 8px;
        align-items: center;
        justify-content: center;
        background-color: #fb64b6;
        font-weight: 600;
        height: 36px;
        border-radius: 12px;
        transition: 250ms all;

        color: white;
        text-decoration: none;
    }

    .button:hover {
        font-size: 18px;
        background-color: #fda5d5;
    }

    .small-device-warning {
        display: none;
        text-align: center;
        font-size: 12px;
        background-color: rgba(255, 255, 0);
        color: #000;
        padding: 8px;
        border-radius: 8px;
        bottom: 16px;
        position: absolute;
        width: 90%;
        z-index: 9999;
    }

    #lazer-container {
        --base-size: 1;
        --translate-pos: translate(100px, 0);
        transform: scale(var(--base-size)) var(--translate-pos);
        display: inline-block;
        transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
        cursor: pointer;
        z-index: 99;
        user-select: none;
        opacity: 1;
    }


    #lazer-container:hover {
        transform: scale(calc(var(--base-size) * 1.1)) translate(90px, 0);
    }

    #lazer {
        pointer-events: none;
        animation: pulse calc(60 / 184 * 1s) linear infinite;
    }

    #menu,
    #menu[open=false] {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        height: 120px;
        width: 100%;
        background: transparent;
        transition: background 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    }

    #menu[open=true] {
        background: rgb(50, 50, 50);
    }

    .navbar,
    .navbar[open=false] {
        opacity: 0;
        position: relative;
        pointer-events: none;
        transition: opacity 0.3s cubic-bezier(0.25, 1, 0.5, 1);
        top: 2px;
    }

    .navbar[open=true] {
        opacity: 1;
        pointer-events: all;
    }

    #right-navbar {
        left: -175px;
    }

    #left-navbar {
        right: -175px;
    }

    .menu-button {
        position: relative;
        display: inline-block;
        width: 250px;
        height: 120px;
        cursor: pointer;
        transform: skewX(-20deg);
        overflow: hidden;
        outline: none;
        transition: width 0.3s cubic-bezier(0.34, 2, 0.64, 1);
        transition-property: width, letter-spacing;
    }

    .menu-button:not([menuBtn]) {
        height: 60px;
    }

    .menu-button:hover {
        width: 300px;
    }

    .menu-button:not([menuBtn]):hover {
        letter-spacing: 1px;
    }

    .button-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, background 0.3s;
    }

    .button-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) skewX(20deg);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        user-select: none;
    }

    .button-icon {
        font-size: 24px;
        transition: transform 0.3s;
    }

    .menu-button:hover .button-bg {
        transform: scale(1.1);
    }

    .menu-button:hover .button-icon {
        animation: bounce .75s ease-in-out infinite;
    }

    .menu-button:active .button-bg {
        transform: scale(0.95);
    }

    @keyframes bounce {
        0% {
            transform: translateY(-0px) rotate(0deg) scaleY(0.9);
        }

        25% {
            transform: translateY(-10px) rotate(12deg) scale(1);
        }

        50% {
            transform: translateY(-0px) rotate(0deg) scaleY(0.9);
        }

        75% {
            transform: translateY(-10px) rotate(-12deg) scale(1);
        }

        100% {
            transform: translateY(-0px) rotate(0deg) scaleY(0.9);
        }
    }


    @keyframes pulse {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 rgba(0, 0, 0, 0);
        }

        12.5% {
            transform: scale(1.1);
        }

        50% {
            transform: scale(1);
        }

        100% {
            transform: scale(1);
        }
    }

    .mobile-table-sep {
        display: none;
        font-size: 8px;
    }

    @media (max-width: 1002px) {
        #lazer-container {
            --translate-pos: translate(0, -50px);
            transform: scale(calc(var(--base-size) * 1.1)) translate(0, -50px);
        }

        #menu {
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: transparent !important;
            width: 100%;
        }

        .menu-button[menuBtn] {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            border-radius: 0;
            transition: 250ms all;

            color: white;
            text-decoration: none;
            width: 100%;
            transform: skewX(0);
        }

        .button-content[menuBtn] {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            user-select: none;
        }

        #menu {
            height: 100%;
        }

        .menu-button:hover {
            width: 100%;
        }

        .menu-button:hover .button-content .button-icon {
            animation: bounce .75s ease-in-out infinite;
        }

        #right-navbar {
            left: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            position: fixed;
            transition: none;
        }

        #left-navbar {
            pointer-events: none;
            opacity: 0;
        }

        .small-device-warning {
            display: block;
        }

        .view-profile {
            display: none;
        }

        .ranking-header {
            gap: 12px;
            flex-direction: column;
        }

        .flag {
            width: 24px;
        }

        .mobile-table-sep {
            display: block;
        }

        .container {
            width: 100%;
        }

        .slack-pfp {
            display: none;
        }
    }

    .container {
        background: #221a21;
        padding: 36px;
        border-radius: 14px;
    }

    .ruleset-std {
        width: 32px;
        height: 32px;

        background-color: #52cb5c;

        -webkit-mask: url(/static/icons/ruleset-std.png) no-repeat center / contain;
        -webkit-mask-repeat: no-repeat;
        -webkit-mask-position: center;
        mask: url(/static/icons/ruleset-std.png) no-repeat center / contain;
        mask-repeat: no-repeat;
        mask-position: center;

        display: inline-block;
    }

    .ruleset-std:hover, .ruleset-std[selected] {
        background-color: white;
    }

    .ruleset-taiko {
        width: 32px;
        height: 32px;

        background-color: #52cb5c;

        -webkit-mask: url(/static/icons/ruleset-taiko.png) no-repeat center / contain;
        -webkit-mask-repeat: no-repeat;
        -webkit-mask-position: center;
        mask: url(/static/icons/ruleset-taiko.png) no-repeat center / contain;
        mask-repeat: no-repeat;
        mask-position: center;

        display: inline-block;
    }

    .ruleset-taiko:hover, .ruleset-taiko[selected] {
        background-color: white;
    }    

    .ruleset-ctb {
        width: 32px;
        height: 32px;

        background-color: #52cb5c;

        -webkit-mask: url(/static/icons/ruleset-ctb.png) no-repeat center / contain;
        -webkit-mask-repeat: no-repeat;
        -webkit-mask-position: center;
        mask: url(/static/icons/ruleset-ctb.png) no-repeat center / contain;
        mask-repeat: no-repeat;
        mask-position: center;

        display: inline-block;
    }

    .ruleset-ctb:hover, .ruleset-ctb[selected] {
        background-color: white;
    }   
    
    .ruleset-mania {
        width: 32px;
        height: 32px;

        background-color: #52cb5c;

        -webkit-mask: url(/static/icons/ruleset-mania.png) no-repeat center / contain;
        -webkit-mask-repeat: no-repeat;
        -webkit-mask-position: center;
        mask: url(/static/icons/ruleset-mania.png) no-repeat center / contain;
        mask-repeat: no-repeat;
        mask-position: center;

        display: inline-block;
    }

    .ruleset-mania:hover, .ruleset-mania[selected] {
        background-color: white;
    }
    
    td {
        text-align: center;
        vertical-align: middle;
    }

    table {
        width: 100%;
    }

    a {
        color: rgb(238, 51, 153);
        text-decoration: none;
    }

    .slack-pfp {
        border-radius: clamp(6px, min(22.222%, 12px), 12px);
    }
</style>
<script>
    document.addEventListener('mousemove', (e) => {
        const x = (e.clientX / window.innerWidth - 0.5) * 2.5;
        const y = (e.clientY / window.innerHeight - 0.5) * 5;
        document.body.style.backgroundPosition = `${50 + x}% ${50 + y}%`;
    });
</script>